record dualrail
{
	int<1> t;
	int<1> f;
}

channel achan4p0b
{
	int<1> r;
	int<1> a;
	
	operator!()
	{
		r+; [a]; r-; [~a];
	}
	
	operator?()
	{
		[r]; a+; [~r]; a-;
	}
	
	operator@()
	{
		r
	}
}

channel achan4p1b
{
	dualrail r;
	int<1> a;
	
	operator!(int<1> i)
	{
		[	i  -> r.t,r.f := 1,0
		[]	~i -> r.t,r.f := 0,1
		];[a]; r.t,r.f := 0,0; [~a];
	}
	
	operator?(int<1> i)
	{
		[r.t | r.f]; i := r.t & ~r.f; a+; [~r.t & ~r.f]; a-;
	}
	
	operator@()
	{
		a
	}
}

channel achan2p0b
{
	int<1> r;
	int<1> a;
	
	operator!(int<1> i)
	{
		[   r -> r-;[~a]
		[] ~r -> r+;[ a]
		]
	}
	
	operator?(int<1> i)
	{
		[   a -> [~r];a-
		[] ~a -> [ r];a+
		]
	}
	
	operator@()
	{
		r
	}
}

channel achan2p1b
{
	dualrail r;
	int<1> a;
	
	operator!(int<1> i)
	{
		[   r -> r-;[~a]
		[] ~r -> r+;[ a]
		]
	}
	
	operator?(int<1> i)
	{
		[   a -> [~r];a-
		[] ~a -> [ r];a+
		]
	}
	
	operator@()
	{
		r
	}
}