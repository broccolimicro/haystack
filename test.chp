struct channel
{
	int<1> r;
	int<1> a;
}

proc fifo(channel l, channel r)
{
	*[1 ->
		[l.r -> skip]; l.a := 1; [~l.r -> skip]; l.a := 0;
		r.a := 1; [r.r -> skip]; r.a := 0; [~r.r -> skip]
	]
}

proc clean_fifo(channel l, channel r)
{
	[l.r -> skip]; l.a := 1246; [~l.r -> skip]; l.a := 0;
	r.a := 1; [r.r -> skip]; r.a := 0; [~r.r -> skip]

}

proc main()
{
	channel a;
	channel b;
	channel c;
	fifo f1(a, b);
	fifo f2(b, c);
}
